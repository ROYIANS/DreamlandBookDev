extends includes/layout.pug

block content
    section.index_page
        .layer
            #today.heti--serif="TODAY."
            .item
            .say_img
                #say_img_content(style="--say-img-url: url(/img/default_cover.png);")
        .layer
            .say_text
                #say_text_content=theme.site.description
            .recommend_list
                .recommend_text.heti--serif="RECENT."
                .recommend_posts
                    .post_list
                        ul
                            li(style=`--img-url: url(/images/default_cover.png)`)
                                .post_index="01"
                                .post_right
                                    .post_title
                                        !=animation_link("我们为什么仰望星空？", "/")
                                    .post_info
                                        span.post_category
                                            !=animation_link("随想", "/")
                                        span.post_author="ROYIANS"
                                        span.post_date="04/13"
                            li(style=`--img-url: url(/images/default_cover.png)`)
                                .post_index="02"
                                .post_right
                                    .post_title
                                        !=animation_link("春游记录", "/")
                                    .post_info
                                        span.post_category="随想"
                                        span.post_author="ROYIANS"
                                        span.post_date="04/13"
                            li(style=`--img-url: url(/images/default_cover.png)`)
                                .post_index="03"
                                .post_right
                                    .post_title
                                        !=animation_link("我的文学末日", "/")
                                    .post_info
                                        span.post_category
                                            !=animation_link("随想", "/")
                                        span.post_author="ROYIANS"
                                        span.post_date="04/13"
                            li(style=`--img-url: url(/images/default_cover.png)`)
                                .post_index="04"
                                .post_right
                                    .post_title
                                        !=animation_link("抱拥这分钟", "/")
                                    .post_info
                                        span.post_category
                                            !=animation_link("随想", "/")
                                        span.post_author="ROYIANS"
                                        span.post_date="04/13"
                            li(style=`--img-url: url(/images/default_cover.png)`)
                                .post_index="05"
                                .post_right
                                    .post_title
                                        !=animation_link("访冬巷往事｜东京没有爱情故事", "/")
                                    .post_info
                                        span.post_category
                                            !=animation_link("随想", "/")
                                        span.post_author="ROYIANS"
                                        span.post_date="04/13"
                .recommend_text--vertical.heti--serif.heti--vertical="RECENT."
    section.slider
        .track-full
            .track-active
        .track-number(style="--week: '/23'")="M"
    .grid-background
        .grid-background-border-horizontal
        .grid-background-border-vertical
    - var siteAvatar = theme.avatar
    svg#mood-avatar(width="8.5rem" height="8.5rem", viewBox="0 0 150 150", onclick="dlf.toggleDarkMode()")
        defs
            path#curve(fill = 'transparent', d='M 15,75 a 60, 60 0 1, 1 120, 0 a 60, 60 0 1, 1 -120, 0')
            rect#rect(x="25", y="25", width="100", height="100", rx="100%")
            clipPath#clip
                use(xlink:href="#rect")
        use(xlink:href="#rect", stroke-width="2", stroke="var(--main-text)")
        text(fill="var(--main-text)", textLength="377")
            textPath#moodText(xlink:href='#curve')="*MOOD*MOOD*MOOD*MOOD*MOOD*MOOD"
        image#moodImage(xlink:href=siteAvatar, x="25", y="25", height="100", width="100", clip-path="url(#clip)")
